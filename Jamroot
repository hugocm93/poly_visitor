
local boost = /Users/rcosme/install/boost-1.60.0 ;

project poly_visitor
  : requirements
    <cxxflags>-std=c++11
    <include>include
    <include>$(boost)/include
    <include>$(loki)/include
    <include>$(asl)
  : default-build
    <optimization>speed
    <variant>release
    <warnings>all
  ;

exe demo_simple
  : demo/simple.cpp
  ;
explicit demo_simple ;

exe demo_generic_visit
  : demo/generic_visit.cpp
  ;
explicit demo_generic_visit ;

exe demo_visitor_with_state
  : demo/visitor_with_state.cpp
  ;
explicit demo_visitor_with_state ;

exe demo_visitor_with_return
  : demo/visitor_with_return.cpp
  ;
explicit demo_visitor_with_return ;

exe demo_visitor_delayed
  : demo/visitor_delayed.cpp
  ;
explicit demo_visitor_delayed ;

exe test_const
  : test/const.cpp
  ;
explicit test_const ;

exe test_return_movable
  : test/return_movable.cpp
  ;
explicit test_return_movable ;

exe test_return_not_movable
  : test/return_not_movable.cpp
  ;
explicit test_return_not_movable ;

install stage
  : demo_simple
    demo_generic_visit
    demo_visitor_with_state
    demo_visitor_with_return
    demo_visitor_delayed
    test_const
    test_return_movable
    test_return_not_movable
  ;
